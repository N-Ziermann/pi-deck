{
  "name": "pi-deck",
  "version": "2.0.0",
  "description": "The PiDeck is a Web based Macro Keyboard thats configured using a Desktop App",
  "author": "N-Ziermann <n-ziermann@protonmail.com>",
  "license": "MIT",
  "main": "src/electron/main.js",
  "homepage": "./",
  "scripts": {
    "react:dev": "vite",
    "react:build": "vite build",
    "dev": "npm run react:build; electron .",
    "electron": "electron .",
    "dist:linux": "npm run react:build; electron-builder --linux",
    "dist:linux:noRebuild": "electron-builder --linux",
    "dist:mac": "npm run react:build; electron-builder --mac",
    "dist:mac:noRebuild": "electron-builder --mac"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "cli-truncate": "^3.1.0",
    "cross-env": "^7.0.3",
    "express": "^4.19.2",
    "ip": "^1.1.9",
    "open": "^8.4.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.10",
    "sqlite3": "^5.0.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^16.2.8",
    "electron-builder": "^24.13.3",
    "vite": "^5.2.7"
  },
  "build": {
    "extraResources": [
      "./src/extraResources/**"
    ],
    "extends": null,
    "appId": "com.n-ziermann.pi-deck",
    "linux": {
      "icon": "./icons/desktopIcon.svg",
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility"
    },
    "mac": {
      "icon": "./icons/desktopIcon.png",
      "target": "dmg"
    }
  },
  "files": [
    "*.js",
    "react/"
  ]
}
