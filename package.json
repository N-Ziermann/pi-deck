{
  "name": "PiDeck",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "homepage": "./",
  "scripts": {
    "react:start": "react-scripts start",
    "react:build": "BUILD_PATH='./react' react-scripts build",
    "start": "npm run react:build; electron .",
    "electron": "electron .",
    "dist:linux": "npm run react:build; electron-builder --linux",
    "dist:linux:noRebuild": "electron-builder --linux",
    "dist:mac": "electron-builder --mac"
  },
  "author": "N-Ziermann <n-ziermann@protonmail.com>",
  "license": "MIT",
  "dependencies": {
    "classnames": "^2.3.1",
    "cli-truncate": "^3.1.0",
    "express": "^4.17.2",
    "open": "^8.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "sqlite3": "^5.0.2",
    "web-vitals": "^2.1.3",
    "ws": "^8.4.2"
  },
  "devDependencies": {
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "react-scripts": "5.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "extraResources": [
      "./extraResources/**"
    ],
    "extends": null,
    "appId": "com.n-ziermann.pi-deck",
    "linux": {
      "icon": "./desktopIcon.svg",
      "target": [
        "deb"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "files": [
    "*.js",
    "react/"
  ]
}
