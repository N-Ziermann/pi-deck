{
  "name": "pi-deck",
  "version": "2.0.0",
  "description": "The PiDeck is a Web based Macro Keyboard thats configured using a Desktop App",
  "author": "N-Ziermann <n-ziermann@protonmail.com>",
  "license": "MIT",
  "main": "src/electron/main.js",
  "homepage": "./",
  "scripts": {
    "react:dev": "vite",
    "electron:dev": "NODE_ENV=development electron .",
    "dev": "npm run react:dev & npm run electron:dev",
    "react:build": "vite build",
    "dist:linux": "npm run react:build; electron-builder --linux",
    "dist:linux:noRebuild": "electron-builder --linux",
    "dist:mac": "npm run react:build; electron-builder --mac",
    "dist:mac:noRebuild": "electron-builder --mac",
    "dist:win": "npm run react:build; electron-builder --win",
    "dist:win:noRebuild": "electron-builder --win",
    "lint:types": "tsc",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "better-sqlite3": "^9.4.3",
    "classnames": "^2.5.1",
    "cli-truncate": "^3.1.0",
    "cross-env": "^7.0.3",
    "express": "^4.19.2",
    "ip": "^1.1.9",
    "open": "^8.4.2",
    "prettier-plugin-jsdoc": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/express": "^4.17.21",
    "@types/ip": "^1.1.3",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.9",
    "electron-builder": "^24.13.3",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3",
    "vite": "^5.2.7"
  },
  "build": {
    "extraResources": [
      "./src/extraResources/**",
      "./src/electron/preload.cjs"
    ],
    "extends": null,
    "appId": "com.n-ziermann.pi-deck",
    "linux": {
      "icon": "./icons/desktopIcon.svg",
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Utility"
    },
    "mac": {
      "icon": "./icons/desktopIcon.png",
      "target": "dmg"
    }
  },
  "files": [
    "*.js",
    "react/"
  ]
}
